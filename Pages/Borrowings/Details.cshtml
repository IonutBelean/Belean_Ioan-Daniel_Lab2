@page
@model Belean_Ioan_Daniel_Lab2.Pages.Borrowings.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Borrowing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member Name
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Member?.FullName
        </dd>
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Book?.Title
        </dd>
        <dt class="col-sm-2">
            Return Date
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.ReturnDate.ToString("dd-MM-yyyy")
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Borrowing.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
