@page
@model Belean_Ioan_Daniel_Lab2.Pages.Borrowings.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Borrowing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Member Name
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Member?.FullName
        </dd>
        <dt class="col-sm-2">
            Book Title
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.Book?.Title
        </dd>
        <dt class="col-sm-2">
            Return Date
        </dt>
        <dd class="col-sm-10">
            @Model.Borrowing.ReturnDate.ToString("dd-MM-yyyy")
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Borrowing.ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-page="./Index">Back to List</a>
    </form>
</div>
